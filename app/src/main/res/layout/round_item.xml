<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_round"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_margin="4dp"
        android:text="Round 1"
        android:gravity="center"
        android:background="@drawable/customborder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header_round">

        <TextView
            android:id="@+id/header_round_player1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player 1"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/header_round_winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Winner"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/header_round_player2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player 2"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="0dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/round_player1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player 1"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/customborder"
            android:layout_marginLeft="0dp" />


        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/winner_bar"
            android:layout_weight="1"
            android:max="2"
            android:layout_marginTop="8dp"
            android:progressDrawable="@drawable/progress"
            android:progress="1"
            android:minHeight="3dip"
            android:maxHeight="3dip"/>

        <TextView
            android:id="@+id/round_player2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Player 2"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/customborder"
            android:layout_marginLeft="0dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Round finished"
        android:id="@+id/finished_button" />

</LinearLayout>